.app
    display grid
    grid-template-rows auto 1fr
    grid-template-columns 1fr
    min-height 100vh
    font-size calc(10px + 2vmin)
    background-color #282c34
    color #eeeeee

.app
	&__header
		display flex
		flex-direction column
		align-items center
		justify-content center
		padding 8px
		background-color rgb(0,0,0)

	&__content
		padding 8px